{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "private": true,
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "bracketSpacing": false
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "*.spec.ts",
      "*.sql"
    ],
    "exec": "ts-node --files src/server/express.ts",
    "ext": "js,ts"
  },
  "scripts": {
    "build": "gulp",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "prettier": "prettier --write \"./src/**/*.{tsx,ts,js,css}\"",
    "stylelint": "stylelint 'src/**/*.css'",
    "lint": "eslint \"./src/**/*.{tsx,ts,js}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{tsx,ts,js}\"",
    "knex": "ts-node --files node_modules/knex/bin/cli.js",
    "migrate": "yarn knex migrate:latest",
    "rollback": "yarn knex migrate:rollback",
    "seed": "KNEX_SEED=true yarn knex seed:run",
    "express": "nodemon",
    "express:debug": "ndb ./node_modules/.bin/ts-node --files src/commands/express.ts",
    "start:worker": "NODE_DEBUG=bull nodemon --exec ts-node --files src/commands/bull.ts",
    "start:worker:debug": "ndb ./node_modules/.bin/ts-node --files  ./src/commands/bull.ts"
  },
  "dependencies": {
    "apollo-opentracing": "^1.4.2",
    "apollo-server-express": "^2.9.7",
    "btoa": "^1.2.1",
    "bull": "^3.12.1",
    "convict": "^5.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-prom-bundle": "^5.1.5",
    "graphql": "^14.5.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-relay": "^0.6.0",
    "grpc": "^1.24.2",
    "helmet": "^3.21.2",
    "jaeger-client": "^3.17.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.1",
    "objection": "^1.6.11",
    "objection-graphql-relay": "^0.0.9",
    "opentracing": "^0.14.4",
    "pg": "^7.18.1",
    "pg-range": "^1.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@microsoft/microsoft-graph-types": "^1.12.0",
    "@types/btoa": "^1.2.3",
    "@types/bull": "^3.10.6",
    "@types/bunyan": "^1.8.6",
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "^0.0.42",
    "@types/google-protobuf": "^3.7.2",
    "@types/got": "^9.6.9",
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/graphql-relay": "^0.4.11",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.22",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/knex": "^0.16.1",
    "@types/node": "^12.12.7",
    "@types/pg": "^7.14.1",
    "@types/pino": "^5.15.1",
    "@types/strange": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.20.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  }
}
